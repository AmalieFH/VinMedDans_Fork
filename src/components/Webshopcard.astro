---
const { img, titel, specifikationer, beskrivelse, pris, slug, baggrund } = Astro.props;
---

<article style={{ backgroundColor: baggrund }}>
  <div class="grid_3">
    <img src={img} alt="produktbillede" />
    <div class="grid_3_1">
      <h1>{titel}</h1>
      <h2>{specifikationer}</h2>
      <p>{beskrivelse}</p>
      <p>{pris}</p>
      <a href={`vine/${slug}`}>
        <button class="button"> LÃ¦s om mig</button>
      </a>
    </div>
  </div>
</article>

<style>
  article {
    width: 100%;
    padding: 25px;
    border-radius: px;
  }
  .grid_3 {
    display: grid;
    grid-template-columns: 1fr;
  }

  img {
    width: 200px;
    justify-self: center;
  }

  .button {
    background-color: #55a603;
    color: #f0d8e1;
    padding: 7px 25px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-family: "Amatic SC";
    font-size: 1.2rem;
  }

  button:hover {
    background-color: #45a049;
  }
  @media (min-width: 750px) {
    .grid_3 {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    img {
      width: 40%;
      justify-self: center;
    }
  }
</style>
