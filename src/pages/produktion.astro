---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../style/generelt.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&family=Montserrat&display=swap" rel="stylesheet" />
    <title>Astro</title>
  </head>
  <body>
    <Header />
    <main>
      <div class="ber_top">
        <img src="img/bær.png" alt="bærpåtoppen" />
        <h1 class="produktionoverskrift">Produktion</h1>
      </div>
      <div class="grid_2">
        <img src="img/asbjorn.jpg" alt="asbjorn" />
        <div class="grid_2_tekst">
          <h2>Plukker</h2>
          <p>Her kommer Amalies tekst til plukkeriet :D</p>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  * {
    padding: 0;
    margin: 0;
  }

  .ber_top img {
    width: 40%;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  .produktionoverskrift {
    text-align: center;
  }

  .grid_2 {
  }

  .grid_2 img {
    justify-content: left;
    width: 50%;
  }
</style>
