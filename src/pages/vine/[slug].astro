<Layouts title={denneVin.id}>
  <main>
    <img src={`/img/produktimg${denneVin.img}`} alt="produktbillede" />
    <h1>{denneVin.titel}</h1>
    <h2>{denneVin.specifikationer}</h2>
    <p>{denneVin.beskrivelse}</p>
    <p>{denneVin.pris}</p>
  </main>
</Layouts>
